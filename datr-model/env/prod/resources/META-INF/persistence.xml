<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

    <!-- Configuracion del EntityManagerFactory -->
    <persistence-unit name="localAppPersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        
        <!-- Clases mapeadas -->
        <class>com.hectorlopezfernandez.datr.model.PersistentObject</class>
        <class>com.hectorlopezfernandez.datr.model.Language</class>
        <class>com.hectorlopezfernandez.datr.model.User</class>
        <class>com.hectorlopezfernandez.datr.model.auth.Authority</class>
        <class>com.hectorlopezfernandez.datr.model.auth.Principal</class>
        
        <properties>
	        <property name="eclipselink.weaving" value="static"/>
	        <property name="eclipselink.logging.level" value="OFF"/>
        </properties>
    </persistence-unit>
    
</persistence>